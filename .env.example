# ============================================
# Django негізгі параметрлері
# ============================================

# Құпия кілт (МІНДЕТТІ өзгертіңіз!)
# Жаңа кілт жасау: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-CHANGE-THIS-TO-RANDOM-STRING

# Debug режимі (Production-да False болуы керек!)
DEBUG=True

# Рұқсат етілген хосттар (үтір арқылы бөлінген)
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# Дерекқор параметрлері
# ============================================

# SQLite дерекқор файлының атауы
DATABASE_NAME=db.sqlite3

# ============================================
# Локализация параметрлері
# ============================================

# Тіл коды
LANGUAGE_CODE=ru-ru

# Уақыт белдеуі
TIME_ZONE=Asia/Almaty

